    <%= form.label :description %>
    <%= form.text_area :description, id: :project_description %>
  </div>

  <div class="field">
    <%= form.label :score %>
    <%= form.number_field :score, id: :project_score %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.number_field :status, id: :project_status %>
  </div>
