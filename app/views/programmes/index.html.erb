<p id="notice"><%= notice %></p>

<h1>Programmes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Score</th>
      <th>Status</th>
      <th>Projects</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programmes.each do |programme| %>
      <tr>
        <td><%= programme.name %></td>
        <td><%= programme.description %></td>
        <td><%= programme.score %></td>
        <td><%= programme.status %></td>
        <td><%= link_to programme.projects.size, programme_projects_path(programme.id) %></td>
        <td><%= link_to 'Show', programme %></td>
        <td><%= link_to 'Edit', edit_programme_path(programme) %></td>
        <td><%= link_to 'Destroy', programme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Programme', new_programme_path %>
